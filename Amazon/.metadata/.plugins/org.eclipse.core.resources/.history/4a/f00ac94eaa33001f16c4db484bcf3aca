package ProjectA.ProjectA;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class HomePage {

	public static void main(String[] args) throws InterruptedException
	{
		// TODO Auto-generated method stub
		WebDriver driver=new ChromeDriver();
		driver.get("https://www.amazon.in/");
		System.out.print(driver.getTitle());
		System.out.print(driver.getCurrentUrl());
		driver.manage().window().maximize();
		driver.manage().window().minimize();
		Thread.sleep(5000);
		driver.findElement(By.id("twotabsearchtextbox")).sendKeys("Mobile");
		Thread.sleep(5000);
		driver.findElement(By.xpath("//span[normalize-space()='under 20000']")).click();
		driver.findElement(By.id("a-autoid-1-announce")).click();
		driver.findElement(By.id("nav-cart-count")).click();
		Thread.sleep(5000);
		driver.findElement(By.xpath("//input[@name='proceedToRetailCheckout']")).click();
		Thread.sleep(5000);
		driver.navigate().back();
		Thread.sleep(5000);
		driver.navigate().back();
		driver.findElement(By.id("twotabsearchtextbox")).clear();
		Thread.sleep(1000);
		driver.findElement(By.id("twotabsearchtextbox")).sendKeys("Kurti for women");
		Thread.sleep(1000);
		driver.findElement(By.xpath("//div[@aria-label='kurti for women latest design']")).click();
		driver.findElement(By.xpath("//a[@aria-label='See more, Brands']//span[@class='a-expander-prompt'][normalize-space()='See more']")).click();
		driver.findElement(By.xpath("//li[@id='p_123/625756']//i[@class='a-icon a-icon-checkbox']")).click();
		driver.findElement(By.xpath("//span[@class='a-size-base a-color-base'][normalize-space()='XL']")).click();
		driver.findElement(By.xpath("//a[@title='Oranges']//div[@class='colorsprite aok-float-left']")).click();
		driver.get("https://www.amazon.in/BIBA-Womens-Polyester-Regular-BL18188_Coral_XL/dp/B09S6MRW2Q/ref=sr_1_1?dib=eyJ2IjoiMSJ9.shluYRwuK46W6GrxoruLVCGMQl4MacZGs_D-zHncOP-OFyi69FBzN77NCbGhdgaangv1sceFxH_lTBY8KSaJrEw6muggIHmIXY83IlZ_ATJ_WVY1twYcBO9nPXRRo78rLVSOPlquyux-OHydkgy_2u6udrVlo0rvVpF7_P3Xo8gR63KTK-bYgTMO8VjKKQvf.TvRwYICmyZJhQaynFyEqOmNC_MOB5vJyjAdYnYtQp-o&dib_tag=se&keywords=Kurti+for+women&psc=1&qid=1719398580&refinements=p_123%3A625756%2Cp_n_size_five_browse-vebin%3A1975369031%2Cp_n_size_two_browse-vebin%3A1975326031&rnid=1974754031&s=apparel&sr=1-1");
		}

}
